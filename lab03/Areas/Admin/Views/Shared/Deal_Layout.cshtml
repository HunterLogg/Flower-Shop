
@{
    ViewBag.Title = "Deal_Layout";
    Layout = "~/Areas/Admin/Views/Shared/Menu_Layout.cshtml";
}

<div id="wrapper">
    <h1 class="text-warning">Search Deals</h1>
    <div class="form-group">
        <div class="col-md-10">
            <label>Search Customer Name</label>
            <input type="text" id="SearchCustomerName" class="form-control" placeholder="Search ..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Search Customer Email</label>
            <input type="text" id="SearchCustomerEmail" class="form-control" placeholder="Search ..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Search Date Deal</label>
            <input type="text" id="SearchDateTransaction" class="form-control" placeholder="Search ..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Search Flower Name</label>
            <input type="text" id="SearchFlowerName" class="form-control" placeholder="Search ..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            &nbsp;
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <button type="button" id="btnSearch" class="btn btn-primary">Search</button>
        </div>
    </div>

    <h1 class="col-md-10 text-info">Deals Information</h1>
    <table class="table table-bordered table-hover">
        <thead style="background-color:royalblue; padding:5px;">
            <tr>
                <td>CustomerName</td>
                <td>CustomerEmail</td>
                <td>Date</td>
                <td>FlowerName</td>
                <td>Quantity</td>
                <td>Total</td>
                <td>Manipulation</td>
            </tr>
        </thead>

        @RenderSection("TABLE", required: false)

    </table>
</div>

@RenderSection("MODEL_DIALOG", required: false)

@RenderSection("Script", required: false)
