
@{
    ViewBag.Title = "Flower_Layout";
    Layout = "~/Areas/Admin/Views/Shared/Menu_Layout.cshtml";
}

<div id="wrapper">
    <h1 class="col-md-12">Search Flower</h1>
    <div class="form-group">
        <div class="col-md-6">
            <label>Search Flower Name</label>
            <input type="text" id="SearchFlowerName" class="form-control" placeholder="Search ..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            <label>Search Price</label>
            <input type="text" id="SearchPrice" class="form-control" placeholder="Search ..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            &nbsp;
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <button type="button" id="btnSearch" class="btn btn-primary">Search</button>
        </div>
    </div>

    <h1 class="col-md-12">Flower Information</h1>
    <div class="col-md-12">
        <button type="button" id="btnCreateNew" data-toggle="modal" data-target="#CreateEditModal"
                class="btn btn-success">
            Create New
        </button>
    </div>

    @RenderSection("FLOWER", required: false)
    @RenderSection("BIRTHDAY", required: false)
    @RenderSection("TULIP", required: false)
    @RenderSection("ANOTHER", required: false)

</div>

@RenderSection("MODEL_DIALOG", required: false)

@RenderSection("Script", required: false)


