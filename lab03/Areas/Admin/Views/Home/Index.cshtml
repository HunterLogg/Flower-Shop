
@{
    ViewBag.Title = "Index";
}
@model lab03.Areas.Admin.LoginModel



@*<h2>This is admin page</h2>*@

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Flat HTML5/CSS3 Login Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/style.css">

</head>

<body>

    <div class="login-page">
        <div class="form">
            @using (Html.BeginForm("Index","Home",FormMethod.Post ,new { @class = "register-form" }))
            {
                @*<form class="register-form">*@
                @*<input type="text" placeholder="name" />
                    <input type="password" placeholder="password" />
                    <input type="text" placeholder="email address" />*@
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                @Html.TextBoxFor(c => c.User, new { placeholder = "name" });
                @Html.PasswordFor(c => c.Password, new { placeholder = "Password" });
                @Html.TextBoxFor(c => c.Email, new { placeholder = "Email" });
                <button>create</button>
                <p class="message">Already registered? <a href="#">Sign In</a></p>
                @*</form>*@
            }
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "login-form" }))
            {
                @*<form class="login-form">*@
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                @*< input type = "text" placeholder = "username" />*@
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "username" });
                @*< input type = "password" placeholder = "password" />*@
                @Html.PasswordFor(m => m.Password, new { placeholder = "password" });

                <button> login </button>


                <p class="message">Not registered? <a href="#">Create an account</a></p>
            }
            @*</form>*@
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>


    <script src="~/Assets/Admin/js/index.js"></script>



</body>

</html>
